<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contabilidad de Ingresos/Egresos"
        android:textSize="20dp"
        android:paddingBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/ahorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:text="Saldo Actual Ahorro"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/saldo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ahorro"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:text="S/2000.00"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:layout_below="@+id/imageView"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/credito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Actual CrÃ©dito"
            android:textSize="20dp"
            android:layout_below="@+id/ahorro"
            android:layout_toEndOf="@+id/imageView2"
            android:paddingLeft="10dp"
            android:paddingTop="26dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/saldo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/credito"
            android:layout_below="@+id/saldo1"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:text="S/1200"
            android:textSize="20dp" />



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:layout_below="@+id/imageView2"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/efectivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo Actual Efectivo"
            android:textSize="20dp"
            android:layout_below="@+id/credito"
            android:layout_toEndOf="@+id/imageView3"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"/>
        <TextView
            android:id="@+id/saldo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/efectivo"
            android:layout_below="@+id/saldo2"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="20dp"
            android:text="S/1200"
            android:textSize="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proporcion de Ingresos/Egresos"
        android:textSize="20dp"
        android:layout_below="@+id/imageView3"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
    <ProgressBar
        android:id="@+id/progreso"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="53"
        android:layout_below="@+id/barra"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:src="@android:drawable/ic_menu_add" />


</LinearLayout>